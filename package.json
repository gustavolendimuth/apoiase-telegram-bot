{
  "name": "apoiase-telegram-bot",
  "version": "1.0.0",
  "description": "Integração entre APOIA.se e Telegram para controle de acesso a grupos/canais",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:prod": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v",
    "webhook:set": "npm run webhook:set --workspace=backend --",
    "webhook:delete": "npm run webhook:delete --workspace=backend",
    "webhook:info": "npm run webhook:info --workspace=backend",
    "webhook:test": "npm run webhook:test --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
