{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API para integração APOIA.se e Telegram",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "seed": "tsx src/scripts/seedCampaigns.ts",
    "seed:auto": "tsx src/scripts/autoSeed.ts",
    "db:export": "tsx scripts/exportDatabase.ts",
    "db:import": "tsx scripts/importDatabase.ts",
    "db:backup": "npm run db:export",
    "db:restore": "npm run db:import",
    "webhook:set": "tsx src/scripts/setWebhook.ts set",
    "webhook:delete": "tsx src/scripts/setWebhook.ts delete",
    "webhook:info": "tsx src/scripts/setWebhook.ts info",
    "webhook:test": "tsx src/scripts/setWebhook.ts test",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "telegraf": "^4.15.0",
    "winston": "^3.11.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
